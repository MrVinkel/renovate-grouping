{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "groupName": "golang",
      "matchPackageNames": [
        "go",
        "golang"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ]
    }
  ]
}