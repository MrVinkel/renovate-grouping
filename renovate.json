{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchDatasources": ["golang-version"],
      "rangeStrategy": "bump"
    },
    {
      "groupName": "golang",
      "matchPackageNames": [
        "go",
        "golang"
      ],
      "allowedVersions": "/^.*1\\.23(\\.5)+.*$/"
    }
  ]
}